<% provide(:title, "Sign up") %>
<div class="signup_container">
  <div class="title">新規登録</div>
  <%= form_with(model: @user, local: true) do |f| %>
    <%= render 'shared/error_messages' %>
    <div class="form">
      <%= f.label :name, "ユーザー名" %>
      <%= f.text_field :name, class: 'form-control font_light' %>
    </div>
    <div class="form">
      <%= f.label :email, "メールアドレス" %>
      <%= f.email_field :email, class: 'form-control font_light' %>
    </div>
    <div class="form">
      <%= f.label :password, "パスワード" %>
      <%= f.password_field :password, class: 'form-control font_light' %>
    </div>
    <div class="form">
      <%= f.label :password_confirmation, "パスワード確認" %>
      <%= f.password_field :password_confirmation, class: 'form-control font_light' %>
    </div>
    <div class="submit_btn">
      <%= f.submit "登録", class: "btn btn-success" %>
    </div>
  <% end %>
  <div class="login">既にアカウントをお持ちの場合は、<%= link_to "ログイン画面へ", login_path %></div>
</div>