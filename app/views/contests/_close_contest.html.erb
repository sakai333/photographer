      </div>
      <div class="prized_post">
        <%= image_tag @prize_posts.second.image.url %>
      </div>
    <% else %>
      <div class="none_award">該当なし</div>
    <% end %>  
  </div>
  <div class="prize">
    <div class="prize_title">
      <i class="fas fa-award blonze"></i>
      <span>第3位</span>
    </div>
    <% if @prize_posts.third %>
      <div class="prized_user">
        <%= image_tag @prize_posts.third.user.image.thumb.url %>
