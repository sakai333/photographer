<div class="award_works">
  <div class="award_title">受賞作品</div>
  <div class="prize">
    <div class="prize_title">
      <i class="fas fa-award gold"></i>
      <span>第1位</span>
    </div>
    <% if @prize_posts.first %>
      <div class="prized_user">
        <%= image_tag @prize_posts.first.user.image.thumb.url %>
        <%= link_to @prize_posts.first.user.name, user_path(@prize_posts.first.user.id), class:"name" %>
      </div>
      <div class="prized_post">
        <%= image_tag @prize_posts.first.image.url %>
      </div>
    <% else %>
      <div class="none_award">該当なし</div>
    <% end %>
  </div>
  <div class="prize">
    <div class="prize_title">
      <i class="fas fa-award silver"></i>
      <span>第2位</span>
    </div>
