<% provide(:title, "contestss#new") %>
<div class="contests_new_container">
  <div class="title">新規コンテスト</div>
  <%= form_with(model: @contest, local: true) do |f| %>
    <div class="form">
      <%= f.label :name, "コンテスト名" %>
      <%= f.text_field :name, class: 'form-control font_light' %>
    </div>
    <div class="form">
      <%= f.label :image, "サムネイル写真" %>
      <%= f.file_field :image, class: 'file_upload font_light' %>
    </div>
    <div class="form">
      <%= f.label :period, "投稿・投票締め切り" %>
      <%= f.date_field :period, class: 'form-control font_light date-picker' %>
    </div>
    <div class="form">
      <%= f.label :condition, "投稿条件" %>
      <%= f.text_area :condition, class: 'form-control font_light' %>
    </div>
    <div class="submit_btn">
      <%= f.submit "登録", class: "btn btn-success" %>
    </div>
  <% end %>
</div>